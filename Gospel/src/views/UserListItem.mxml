<?xml version="1.0" encoding="utf-8"?>
<s:DataRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark" creationComplete="datarenderer1_creationCompleteHandler(event)"
		 xmlns:mx="library://ns.adobe.com/flex/halo" width="274" height="56" xmlns:views="views.*" color="#4C1B1B">
	<fx:Declarations>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import flash.display.NativeMenu;
			import flash.display.NativeMenuItem;
			import flash.events.Event;
			import flash.events.MouseEvent;
			
			import mx.events.FlexEvent;

			protected function imagebutton1_clickHandler(event:MouseEvent):void
			{
				sendDexterEvent("publishUserVideo",data);
			}


			protected function datarenderer1_creationCompleteHandler(event:FlexEvent):void
			{
				var menu:NativeMenu = new NativeMenu();
				var menuItem:NativeMenuItem = new NativeMenuItem("上视频");
				menuItem.addEventListener(Event.SELECT,onMenu);
				menu.addItem(menuItem);
				contextMenu = menu;
			}
			private function onMenu(event:Event):void{
				sendDexterEvent("publishUserVideo",data);
			}
		]]>
	</fx:Script>
	<s:Rect width="100%" height="100%" radiusX="5" radiusY="5">
		<s:fill>
			<s:SolidColor color="0xf6e497"/>
		</s:fill>
		<s:filters>
			<s:GlowFilter inner="true" color="0" blurX="8" blurY="8"/>
		</s:filters>
	</s:Rect>
	<s:Label x="10" y="10" text="{data.name}"/>
	<views:ImageButton x="208" y="10" source="assets/webcam.png" click="imagebutton1_clickHandler(event)"/>
</s:DataRenderer>
