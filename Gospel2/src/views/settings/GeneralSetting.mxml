<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009"  removedFromStage="navigatorcontent1_removedFromStageHandler(event)"
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/halo" width="400" height="300" xmlns:local="*">
	<fx:Script>
		<![CDATA[
			import flash.events.Event;
			
			import models.LocalSetting;
			[DexterBinding]
			[Bindable]
			public var localSetting:LocalSetting;
			protected function navigatorcontent1_removedFromStageHandler(event:Event):void
			{
				df.detach();
				localSetting.pwd = pwd.text;
			}

		]]>
	</fx:Script>
	<fx:Declarations>
		<local:DexterFramework id="df"/>
	</fx:Declarations>
	<mx:Form x="10" y="6" width="399" height="366" color="#133463">
		<mx:FormItem label="密码：">
			<s:TextInput displayAsPassword="true" id="pwd" text="{localSetting.pwd}"/>
		</mx:FormItem>
	</mx:Form>
</s:NavigatorContent>
